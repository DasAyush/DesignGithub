<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.codefault.githubsummer.LoginActivity">

    <EditText
        android:layout_centerInParent="true"
        android:id="@+id/et_github_username"
        android:hint="Github Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_github_password"
        android:layout_below="@+id/et_github_username"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_below="@+id/et_github_password"
        android:layout_centerHorizontal="true"
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
